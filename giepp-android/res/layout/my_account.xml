<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyAccountFragment" >

    <TextView
        android:textColor="#A0A0A0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOJE KONTO" />
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	>
	    <TextView
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Na koncie: " />
	    <TextView
	        android:id="@+id/money"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:text="1000" />
	   </LinearLayout> 	
 	   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	>
	    <TextView
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="W akcjach: " />
	    <TextView
	        android:id="@+id/stock"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:text="1000" />
	   </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W sumie: " />
        <TextView
            android:id="@+id/money_all"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000" />
       </LinearLayout>	   
	   <TextView
	        android:textColor="#A0A0A0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:text="POSIADANE AKCJE" />
  	  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

	   <TextView
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:layout_weight="0.5"
	       android:background="#C0C0C0"
	       android:gravity="center"
	       android:text="FIRMA"
	       android:textColor="#000000" />

	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.5"
	        android:background="#C0C0C0"
	        android:gravity="center"
	        android:singleLine="true"
	        android:text="ILOŚĆ"
	        android:textColor="#000000" />
  
        <TextView  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:textColor="#000000"  
            android:background="#C0C0C0"
            android:layout_weight="0.5"  
            android:gravity="right"  
            android:singleLine="true"  
            android:text="SUMA, zakup"  
        />
    </LinearLayout>
  	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
  	>
  	    
  	 <TextView  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:textColor="#000000"  
        android:background="#D0D0D0"
        android:layout_weight="0.5"
        android:gravity="center"  
        android:text="RAZEM" 
    />
  	<TextView
       android:id="@+id/suma_ilosc"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.5"
       android:gravity="right|center_vertical"
       android:text="0"
       android:background="#D0D0D0"
       android:textColor="#000000" />
 <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.5"  
       android:orientation="vertical" >

       <TextView
           android:id="@+id/suma_teraz"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="0.5"
           android:gravity="right|center_vertical"
           android:singleLine="true"
           android:text="10,23"
           android:background="#D0D0D0"
           android:textColor="#000000" />
  
       <TextView
           android:id="@+id/suma_zakup"
           android:background="#D0D0D0"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="0.5"
           android:gravity="right|center_vertical"
           android:singleLine="true"
           android:text="30,55"
           android:textColor="#000000"
           android:textSize="12dp" />
  
    </LinearLayout>
  	
  		</LinearLayout>
    
    <ListView
        android:id="@+id/my_account_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>